<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:id="@+id/multitouchxy"
  xmlns:android="http://schemas.android.com/apk/res/android"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="fill_parent"
  android:background="@drawable/keyboard"
  android:padding="0dip">
<RelativeLayout
    android:id="@+id/layout_setting_up"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="80dip"
  android:background="@drawable/bg01"
  android:padding="0dip">
   <Button
        android:id="@+id/load_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="load" 
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
         android:layout_marginTop="-4dip"
         android:layout_marginBottom="-4dip"/>
 <Button
        android:id="@+id/plus_button"
        android:layout_width="36dip"
        android:layout_height="wrap_content"
        android:text="+" 
        android:layout_below="@+id/load_button"
       android:layout_marginTop="-5dip"
       android:layout_marginLeft="0dip"
        android:layout_alignParentLeft="true"
         />
 
 <Button
        android:id="@+id/minus_button"
        android:layout_width="36dip"
        android:layout_height="wrap_content"
        android:text="-" 
        android:layout_below="@+id/load_button"
        android:layout_toRightOf="@+id/plus_button"
        android:layout_marginTop="-5dip"
        android:layout_marginLeft="-8dip"
        /> 
        
 </RelativeLayout>
 
<RelativeLayout
    android:id="@+id/layout_setting_mid"
  android:orientation="vertical"
  android:layout_width="fill_parent"
  android:layout_height="90dip"
  android:background="@drawable/bg01"
  android:layout_marginTop="220dip"
  android:padding="0dip">
   <Button
        android:id="@+id/load_button_2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="load" 
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
         android:layout_marginTop="0dip"
         android:layout_marginBottom="-4dip"/>
 <Button
        android:id="@+id/plus_button_2"
        android:layout_width="36dip"
        android:layout_height="wrap_content"
        android:text="+" 
        android:layout_below="@+id/load_button_2"
       android:layout_marginTop="-5dip"
       android:layout_marginLeft="0dip"
        android:layout_alignParentLeft="true"
         />
 
 <Button
        android:id="@+id/minus_button_2"
        android:layout_width="36dip"
        android:layout_height="wrap_content"
        android:text="-" 
        android:layout_below="@+id/load_button_2"
        android:layout_toRightOf="@+id/plus_button_2"
        android:layout_marginTop="-5dip"
        android:layout_marginLeft="-8dip"
        /> 
        
 </RelativeLayout>
</RelativeLayout>